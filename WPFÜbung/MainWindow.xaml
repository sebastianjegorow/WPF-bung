<Window x:Class="WPFÜbung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFÜbung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="365">
    <Grid Margin="0,0,35,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="323*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelName" Content="Anwendername" Margin="32,124,0,0" RenderTransformOrigin="-0.855,0.509" HorizontalAlignment="Left" Width="92" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbName" KeyUp="tbName_KeyUp" Grid.Column="1" HorizontalAlignment="Left" Margin="106,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="Black"/>
        <TextBox x:Name="tbEmail" KeyUp="tbEmail_KeyUp" Grid.Column="1" HorizontalAlignment="Left" Margin="106,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="Black"/>
        <Label x:Name="labelEmail" Content="E-Mail" HorizontalAlignment="Left" Margin="34,161,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="labelTelefon" Content="Telefon" HorizontalAlignment="Left" Margin="34,202,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbTelefon" KeyUp="tbTelefon_KeyUp" Grid.Column="1" HorizontalAlignment="Left" Margin="106,206,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="Black"/>
        <Label x:Name="labelIP" Content="IPv4-Adresse" HorizontalAlignment="Left" Margin="32,243,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbIP" KeyUp="tbIP_KeyUp" Grid.Column="1" HorizontalAlignment="Left" Margin="106,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="Black"/>
        <Label x:Name="labelFeedback" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,286,0,0" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="buttonSave" Grid.Column="1" Content="Speichern" HorizontalAlignment="Left" Margin="83,330,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
